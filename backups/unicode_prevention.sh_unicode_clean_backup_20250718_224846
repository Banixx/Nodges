#!/bin/bash
# UNICODE PREVENTION SYSTEM - Verhindert Unicode-VerstÃ¶ÃŸe in Echtzeit

echo "[SECURITY] Unicode Prevention System aktiviert"

# 1. Ãœberwache alle wichtigen Dateien auf Unicode
WATCH_FILES=(
    "main.js"
    "index.html" 
    "src/core/LayoutManager.js"
    "src/core/StateManager.js"
    "src/core/UIManager.js"
    "src/core/EventManager.js"
    "automated_performance_test.html"
    "ROVO_DEV_RULES.md"
)

# 2. Funktion: Unicode-Check
check_unicode_violations() {
    local file="$1"
    if [ -f "$file" ]; then
        # Suche nach Unicode-Zeichen (nicht ASCII)
        if grep -P '[^\x00-\x7F]' "$file" >/dev/null 2>&1; then
            echo "[CRITICAL] Unicode-VerstoÃŸ gefunden in: $file"
            
            # Zeige die problematischen Zeilen
            echo "[DETAILS] Problematische Zeichen:"
            grep -P '[^\x00-\x7F]' "$file" | head -5
            
            # Automatisches Backup vor Bereinigung
            cp "$file" "backups/$(basename "$file")_unicode_violation_$(date +%Y%m%d_%H%M%S)"
            echo "[BACKUP] Backup erstellt fÃ¼r $file"
            
            return 1
        fi
    fi
    return 0
}

# 3. PrÃ¼fe alle Ã¼berwachten Dateien
violations_found=0
for file in "${WATCH_FILES[@]}"; do
    if ! check_unicode_violations "$file"; then
        violations_found=$((violations_found + 1))
    fi
done

# 4. Spezielle ÃŸ-Erkennung
echo "[CHECK] Suche nach ÃŸ-Zeichen..."
for file in "${WATCH_FILES[@]}"; do
    if [ -f "$file" ] && grep -F 'ÃŸ' "$file" >/dev/null 2>&1; then
        echo "[CRITICAL] ÃŸ-Zeichen gefunden in: $file"
        grep -n 'ÃŸ' "$file"
        violations_found=$((violations_found + 1))
    fi
done

# 5. Emoji/Icon-Erkennung
echo "[CHECK] Suche nach Emojis/Icons..."
for file in "${WATCH_FILES[@]}"; do
    if [ -f "$file" ] && grep -E '[ğŸ§ªğŸ®ğŸ’¾âš¡ğŸ§¹ğŸ“ğŸ“ˆğŸ†âœ…âŒâ„¹ï¸ğŸ”§]' "$file" >/dev/null 2>&1; then
        echo "[CRITICAL] Emoji/Icon gefunden in: $file"
        grep -n -E '[ğŸ§ªğŸ®ğŸ’¾âš¡ğŸ§¹ğŸ“ğŸ“ˆğŸ†âœ…âŒâ„¹ï¸ğŸ”§]' "$file"
        violations_found=$((violations_found + 1))
    fi
done

# 6. Ergebnis
if [ $violations_found -gt 0 ]; then
    echo "[ALARM] $violations_found Unicode-VerstÃ¶ÃŸe gefunden!"
    echo "[ACTION] Sofortige Bereinigung erforderlich!"
    exit 1
else
    echo "[OK] Keine Unicode-VerstÃ¶ÃŸe gefunden"
    exit 0
fi